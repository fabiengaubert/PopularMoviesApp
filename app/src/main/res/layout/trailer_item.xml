<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_trailer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_trailer_title"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/padding_horizontal_trailer_title"
        android:paddingTop="@dimen/padding_top_trailer_title"
        android:paddingBottom="@dimen/padding_bottom_trailer_title"/>
    <ImageButton
        android:id="@+id/ib_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:tint="@android:color/white"
        android:background="@android:color/transparent"
        android:src="@drawable/outline_play_arrow_24"
        android:layout_marginHorizontal="16dp"
        android:onClick="onClickPlayTrailer"/>
</RelativeLayout>