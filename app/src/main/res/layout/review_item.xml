<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_review_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_review_title"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/padding_horizontal_review_title"
        android:paddingTop="@dimen/padding_top_review_title"/>
    <TextView
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_review"
        android:paddingHorizontal="@dimen/padding_horizontal_review"
        android:paddingTop="@dimen/padding_top_review"
        android:paddingBottom="@dimen/padding_bottoml_review"/>
</LinearLayout>